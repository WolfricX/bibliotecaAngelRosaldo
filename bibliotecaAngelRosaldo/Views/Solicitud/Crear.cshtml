@model bibliotecaAngelRosaldo.Models.Domain.Solicitud
@{
    ViewData["Title"] = "Crear Solicitud";
    Layout = "_LayoutDashboard";
}

<div class="container mt-4">
    <h1 class="display-4 text-center">Crear Solicitud</h1>
    <form asp-action="Crear" method="post">
        <div class="form-group">
            <label asp-for="FkUsuario" class="control-label"></label>
            <select asp-for="FkUsuario" class="form-control">
                <option value="">Seleccione un usuario</option>
                @foreach (var usuario in ViewBag.Usuarios)
                {
                    <option value="@usuario.PkUsuario">@usuario.Nombre</option>
                }
            </select>
            <span asp-validation-for="FkUsuario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FkLibro" class="control-label"></label>
            <select asp-for="FkLibro" class="form-control">
                <option value="">Seleccione un libro</option>
                @foreach (var libro in ViewBag.Libros)
                {
                    <option value="@libro.PkLibro">@libro.Titulo</option>
                }
            </select>
            <span asp-validation-for="FkLibro" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FechaSolicitud" class="control-label"></label>
            <input asp-for="FechaSolicitud" class="form-control" />
            <span asp-validation-for="FechaSolicitud" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EstadoSolicitud" class="control-label"></label>
            <select asp-for="EstadoSolicitud" class="form-control">
                <option value="Prestamo Pendiente">Prestamo Pendiente</option>
                <option value="Prestamo Realizado">Prestamo Realizado</option>
            </select>
            <span asp-validation-for="EstadoSolicitud" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Crear</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>