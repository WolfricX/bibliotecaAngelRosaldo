@model bibliotecaAngelRosaldo.Models.Domain.Prestamo

@{
    ViewData["Title"] = "Editar Préstamo";
    Layout = "_LayoutDashboard";
}

<h2>Editar Préstamo</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="PkPrestamo" />
    <div class="form-group">
        <label asp-for="FkUsuario"></label>
        <input asp-for="FkUsuario" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="FkLibro"></label>
        <input asp-for="FkLibro" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="FechaPrestamo"></label>
        <input asp-for="FechaPrestamo" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="FechaDevolucion"></label>
        <input asp-for="FechaDevolucion" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>